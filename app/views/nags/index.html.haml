.row
  %h1.small-12.columns My Nags
.row
  %h4.small-12.columns="#{current_user.full_name} - #{current_user.formatted_phone_number}"

.row
  %table.nags-table.small-11.columns
    .row
      %thead
        %tr
          %th.small-12.columns
            Remind me to:
          %th
          %th
    .row
      %tbody
        -@nags.each do |nag|
          %tr
            %td.nag-contents.small-12.columns
              =nag.contents.capitalize
            %td.nag-done
              =link_to "Done", done_nag_path(nag), method: :put
            %td.nag-edit
              =link_to "Edit", edit_nag_path(nag)

