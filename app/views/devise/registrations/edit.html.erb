<h2>Edit Account</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name, label: "First Name", :required => true, :autofocus => true %>
  <%= f.input :last_name, label: "Last Name", :required => true %>
  <p>Phone Number: <%= current_user.phone_number %> <%= link_to "change", "#" %></p> 
  <%= f.input :password, label: "New Password", :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
  <%= f.input :password_confirmation, label: "Password Confirmation", :required => false %>
  <%= f.input :current_password, label: "Current Password", :hint => "we need your current password to confirm your changes", :required => true %>
  <%= f.button :submit, "Submit" %>
<% end %>

<%= link_to "Back", :back %>
